{
  "main": {
    "tag": "div",
    "class": "comments"
  },

  "comment": {
    "tag": "div",
    "class": "comment",
    "inner": [
      {
        "tag": "div",
        "class": "date",
        "inner": "%date%"
      },
      {
        "tag": "div",
        "class": "likevalue",
        "inner": "%likevalue%"
      },
      {
        "tag": "div",
        "class": "like",
        "inner": [
          {
            "tag": "button",
            "class": "button",
            "inner": "like",
            "onclick": "%likeclick%"
          },
          {
            "tag": "button",
            "class": "button",
            "inner": "dislike",
            "onclick": "%dislikeclick%"
          }
        ]
      },
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": "%text%"
      }
    ]
  },

  "input": {
    "tag": "div",
    "class": "new_comment",
    "inner": [
      {
        "tag": "div",
        "class": "name"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": {
          "tag": "form",
          "inner": [
            {
              "tag": "input",
              "class": "input",
              "placeholder": "Enter comment here..."
            },
            {
              "tag": "input",
              "class": "button",
              "type": "submit",
              "value": "Send"
            }
          ],
          "onsubmit": "%onsubmit%"
        }
      }
    ]
  }
}