{
  "main": {
    "tag": "div",
    "class": "comments"
  },
  "comment": {
    "tag": "div",
    "class": "comment",
    "inner": [
      {
        "tag": "div",
        "class": "date",
        "inner": "%date%"
      },
      {
        "tag": "div",
        "class": "name",
        "inner": "%name%"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": "%text%"
      },
      {
        "tag": "div",
        "class": "like",
        "inner": [
          {
            "tag": "button",
            "class": "likebutton",
            "onclick": "%likeclick%"
          },
          {
            "tag": "div",
            "class": "likevalue",
            "inner": "%likevalue%"
          },
          {
            "tag": "button",
            "class": "dislikebutton",
            "onclick": "%dislikeclick%"
          }
        ]
      }
    ]
  },
  "input": {
    "tag": "div",
    "class": "new_comment",
    "inner": [
      {
        "tag": "div",
        "class": "text",
        "inner": "Kommentare: %totalcomments%"
      },
      {
        "tag": "div",
        "class": "name"
      },
      {
        "tag": "div",
        "class": "text",
        "inner": {
          "tag": "form",
          "inner": [
            {
              "tag": "input",
              "class": "input",
              "placeholder": "Enter comment here..."
            },
            {
              "tag": "input",
              "class": "inputbutton",
              "type": "submit",
              "value": "Send"
            }
          ],
          "onsubmit": "%onsubmit%"
        }
      }
    ]
  }
}